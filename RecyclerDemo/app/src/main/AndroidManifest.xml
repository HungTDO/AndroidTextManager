<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xlythe.demo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ComposeActivity"
            android:label="@string/compose"
            android:theme="@style/AppTheme.NoActionBar.compose" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xlythe.demo.MainActivity" />
        </activity>
        <activity android:name=".EditTextActivity"
            android:theme="@style/AppTheme.NoActionBar.compose.edit"
            android:windowSoftInputMode="stateVisible|adjustNothing">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xlythe.demo.ComposeActivity" />
        </activity>
    </application>

</manifest>
