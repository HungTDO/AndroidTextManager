<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:actionModeBackground">@android:color/white</item>
        <item name="android:actionModeSplitBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Main">
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar.Compose">
        <item name="android:windowBackground">@color/colorCompose</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Compose.Edit">
    </style>

    <style name="Date">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#9e9e9e</item>
    </style>

    <style name="Body">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body.Left">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Body.Right">
        <item name="android:textColor">@color/titleText</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#0C000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
