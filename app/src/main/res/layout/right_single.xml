<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/message_vertical_margin"
    android:paddingRight="@dimen/message_vertical_margin"
    android:paddingTop="@dimen/message_outside_margin"
    android:paddingBottom="@dimen/message_outside_margin"
    android:background="?selectableItemBackground">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/right_single">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body.Right" />

    </FrameLayout>

    <TextView
        android:id="@+id/date"
        android:layout_marginLeft="@dimen/message_date_margin_right"
        android:layout_marginRight="@dimen/message_date_margin_right"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Date" />

</LinearLayout>