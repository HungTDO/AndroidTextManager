<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/message_vertical_margin"
    android:paddingRight="@dimen/message_vertical_margin"
    android:paddingTop="@dimen/message_outside_margin"
    android:paddingBottom="@dimen/message_outside_margin"
    android:background="?selectableItemBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/message_profile_dimen"
            android:layout_height="@dimen/message_profile_dimen"
            android:src="@color/colorPrimary"
            app:civ_border_width="0dp"
            app:civ_border_color="#00ffffff"/>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_single">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Body.Left" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_marginLeft="@dimen/message_date_margin_left"
        android:layout_marginRight="@dimen/message_date_margin_left"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Date" />

</LinearLayout>